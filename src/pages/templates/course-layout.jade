  body
    a.back-btn(href="/#courses")

    #vk_community_messages
    script(type="text/javascript").
      VK.Widgets.CommunityMessages("vk_community_messages", 54916180, {expandTimeout: "30000",tooltipButtonText: "Ответим на любые вопросы"});
    
    .socials
      a.social__vk(target="_blank" href="https://vk.com/digital_banana") vk
      a.social__fb(target="_blank" href="https://www.facebook.com/digitalbananaschool/") f
      a.social__inst(target="_blank" href="https://www.instagram.com/digital_banana/") ins

    .successmsg
      .successmsg-title Ваша заявка принята!
      .successmsg-desc В ближайшее время мы свяжемся с вами!
      img(src="assets/img/roll.png")

    section.section-course
      .container
        include ../partials/form.jade

        .content-about-course
          .course-left.course-teacher-top
            block teacher

          .course-right
            block course

        .content-info-course
          .course-left.course-price-top
            block price

            .ui-btn.-primary.-course.js-formBtn Оставить заявку
            .about-desc.margin-bottom-small Задать любой вопрос можно по телефону:
            a.about-title(href="tel:89650184751") 8 (965) 018-47-51
            
          .course-right
            .about-title.-less-margin Уровень подготовки:
            block details
            script(type="text/javascript").
              document.write(VK.Share.button(false,{type: "round", text: "Поделиться"})); 

          .course-left.course-teacher-bottom
            block teacher

          .course-left.course-price-bottom
            block price

            .ui-btn.-primary.-course.js-formBtn Оставить заявку
            .about-desc Задать любой вопрос можно по телефону
            a.about-title(href="tel:89650184751") 8 (965) 018-47-51
            script(type="text/javascript").
              document.write(VK.Share.button(false,{type: "round", text: "Поделиться"})); 

